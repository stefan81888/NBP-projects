@model TravelAgency.DataLayer.Model.Admin
@{
    ViewBag.Title = "Dodaj administratora";
    Layout = "~/Views/Shared/_Login.cshtml";
}


<div class="tab-content">
    <div id="login">

        @using (Html.BeginForm("AddAdminToDatabase", "AdminAccess"))
        {

            <div class="field-wrap">
                <label>
                    Korisničko ime<span class="req">*</span>
                </label>
                @Html.TextBoxFor(admin => admin.Username, new { required = "required", autocomplete = "off" })
            </div>

            <div class="field-wrap">
                <label>
                    Šifra<span class="req">*</span>
                </label>
                @Html.TextBoxFor(admin => admin.Password, new { required = "required", autocomplete = "off" })
            </div>
            <div class="field-wrap">
                <label>
                    Ime<span class="req">*</span>
                </label>
                @Html.TextBoxFor(admin => admin.FirstName, new { required = "required", autocomplete = "off" })
            </div>
            <div class="field-wrap">
                <label>
                    Prezime<span class="req">*</span>
                </label>
                @Html.TextBoxFor(admin => admin.LastName, new { required = "required", autocomplete = "off" })
            </div>
            <button class="button button-block">Dodaj</button>
        }
    </div>

</div>

