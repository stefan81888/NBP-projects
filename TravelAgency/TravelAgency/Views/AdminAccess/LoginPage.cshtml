@model TravelAgency.DataLayer.Model.Admin
@{
    ViewBag.Title = "Prijava";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="tab-content">    
    <div id="login">     

        @using (Html.BeginForm("Login", "AdminAccess"))
        {

            <div class="field-wrap">
                <label>
                    Korisničko ime<span class="req">*</span>
                </label>
                @Html.TextBoxFor(admin => admin.Username, new { required = "required", autocomplete = "off" })
            </div>

            <div class="field-wrap">
                <label>
                    Šifra<span class="req">*</span>
                </label>
                @Html.PasswordFor(admin => admin.Password, new { required = "required", autocomplete = "off" })
            </div>

            <button class="button button-block">Prijavi se</button>

        }
    </div>

</div>


