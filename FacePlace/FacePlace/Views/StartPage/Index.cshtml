@model FacePlace.DataLayer.Model.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<ul class="tab-group">
    <li class="tab active"><a href="#signup">Sign Up</a></li>
    <li class="tab"><a href="#login">Log In</a></li>
</ul>
<div class="tab-content">
    <div id="signup">
        <h1>Sign Up for Free</h1>


        @using (Html.BeginForm("Register", "StartPage"))
        {

            <div class="field-wrap">
                <label>
                    Username<span class="req">*</span>
                </label>
                @Html.TextBoxFor(u => u.Username, new { required = "required", autocomplete = "off" })
            </div>
            <div class="top-row">
                <div class="field-wrap">
                    <label>
                        First Name<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(u => u.FirstName, new { required = "required", autocomplete = "off" })
                </div>

                <div class="field-wrap">
                    <label>
                        Last Name<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(u => u.LastName, new { required = "required", autocomplete = "off" })

                </div>
            </div>
            <div class="field-wrap">
                <label>
                    Email Address<span class="req">*</span>
                </label>
                @Html.TextBoxFor(u => u.Email, new { required = "required", autocomplete = "off" })
            </div>

            <div class="field-wrap">
                <label>
                    Set A Password<span class="req">*</span>
                </label>
                @Html.PasswordFor(u => u.Password, new { required = "required", autocomplete = "off" })
            </div>

            <button type="submit" class="button button-block">Get Started</button>
        }
    </div>

    <div id="login">
        <h1>Welcome Back!</h1>

        @using (Html.BeginForm("Login", "StartPage"))
        {

            <div class="field-wrap">
                <label>
                    Username<span class="req">*</span>
                </label>
                @Html.TextBoxFor(u => u.Username, new { required = "required", autocomplete = "off" })
            </div>

            <div class="field-wrap">
                <label>
                    Password<span class="req">*</span>
                </label>
                @Html.PasswordFor(u => u.Password, new { required = "required", autocomplete = "off" })
            </div>

            <button class="button button-block">Log In</button>

        }
    </div>

</div><!-- tab-content -->
